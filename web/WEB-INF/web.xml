<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ViewQues</servlet-name>
        <servlet-class>web.ViewQuesAllUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnsAll</servlet-name>
        <servlet-class>web.AnsAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuesUser</servlet-name>
        <servlet-class>web.QuesForEachUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuesPerExpert</servlet-name>
        <servlet-class>web.QuesPerExpert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewUpdateAns</servlet-name>
        <servlet-class>web.ViewUpdateAns</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAns</servlet-name>
        <servlet-class>web.UpdateAns</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>web.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInfoUser</servlet-name>
        <servlet-class>web.UpdateInfoUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInfoExp</servlet-name>
        <servlet-class>web.UpdateInfoExp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewQues</servlet-name>
        <url-pattern>/viewques</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnsAll</servlet-name>
        <url-pattern>/ansall</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuesUser</servlet-name>
        <url-pattern>/quesuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuesPerExpert</servlet-name>
        <url-pattern>/qpe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewUpdateAns</servlet-name>
        <url-pattern>/vua</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAns</servlet-name>
        <url-pattern>/uans</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInfoUser</servlet-name>
        <url-pattern>/uiu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInfoExp</servlet-name>
        <url-pattern>/ueu</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>welcomePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
